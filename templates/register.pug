extends layout

block content

  div(class="jumbotron register")
    form(action="/register" method="post")
      h1 Registration

      .form-group
        label(for="email") Email
        input.form-control(type="email" id="email" name="email" placeholder="my@mail.com" required autofocus)
      .form-group
        label(for="displayName") Display name
        input.form-control(type="text" id="displayName" name="displayName" required)
      .form-group
        label(for="password") Password
        input.form-control(type="password" id="password" name="password" required)
      .form-group
        label(for="passwordConfirm") Confirm Password
        input.form-control(type="password" id="passwordConfirm" name="passwordConfirm" required)

      button.btn.btn-lg.btn-primary.btn-block(type="submit") Submit